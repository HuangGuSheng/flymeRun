<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:abc="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <com.huanggusheng.flemerun.Slidingmenu
        android:id="@+id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        abc:rightPadding="150dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/leftmenu"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="15.00 KM"
                    android:textSize="80sp"/>

                <TextView
                    android:id="@+id/text_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text_totaldistance"
                    android:textColor="@color/black"
                    android:textSize="40sp"/>

                <at.markushi.ui.CircleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:id="@+id/btn_start"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/img_run"
                    app:cb_color="@color/black"
                    app:cb_pressedRingWidth="180dip" />

            </LinearLayout>
        </LinearLayout>
    </com.huanggusheng.flemerun.Slidingmenu>

</RelativeLayout>
