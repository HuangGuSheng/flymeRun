<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <at.markushi.ui.CircleButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cb_color="@color/dimgray"
        app:cb_pressedRingWidth="30dp"
        android:id="@+id/strart_Btn"
        android:src="@mipmap/btn_run_1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curret_speed"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="18dp"
        android:textSize="18sp"
        android:textColor="@color/darkolivegreen"
        android:text=""
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        android:layout_alignTop="@+id/curret_speed"
        android:layout_alignLeft="@+id/curret_speed"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/darkolivegreen"
        android:textStyle="bold"
        android:text=""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_alignTop="@+id/distance"
        android:layout_alignLeft="@+id/distance"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/darkolivegreen"
        android:textStyle="bold"
        android:text=""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/average_speed"
        android:layout_alignTop="@+id/time"
        android:layout_alignLeft="@+id/time"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/darkolivegreen"
        android:textStyle="bold"
        android:text=""
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:id="@+id/btn_stop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
