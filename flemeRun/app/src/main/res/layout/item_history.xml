<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/item_distance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_text1"
        android:layout_alignLeft="@+id/item_text1"
        android:text="3km"
        android:textSize="25sp"/>


    <TextView
        android:id="@+id/item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_distance"
        android:layout_marginLeft="14dp"
        android:text="速度"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/item_speed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_text2"
        android:layout_alignLeft="@+id/item_text2"

        android:text="10'44"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/item_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_speed"
        android:layout_marginLeft="14dp"
        android:text="日期"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_text3"
        android:gravity="center_vertical"
        android:layout_alignLeft="@+id/item_text3"
        android:text="2015.10.24"
        android:textSize="20sp"/>
</RelativeLayout>