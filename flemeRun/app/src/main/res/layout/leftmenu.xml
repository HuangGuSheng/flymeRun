<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <ImageView 
                android:id="@+id/img_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/img_user"
                />
            <TextView
                android:id="@+id/txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:text="用户"/>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@mipmap/local_hq_line"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:id="@+id/rel_activity"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:clickable="true">
            <ImageView 
                android:id="@+id/img_activity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/img_act"
                />
            <TextView
                android:id="@+id/txt_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_activity"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:text="历史活动"/>
        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/rel_analys"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:clickable="true">
            <ImageView 
                android:id="@+id/img_analy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/img_analy"
               />
            <TextView
                android:id="@+id/txt_analy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_analy"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:text="数据分析"/>
        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/rel_fri"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content">
            <ImageView 
                android:id="@+id/img_fri"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/img_friend"
                />
            <TextView
                android:id="@+id/txt_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_fri"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:text="Flyme好友"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rel_around"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:clickable="true">
            <ImageView 
                android:id="@+id/img_around"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/img_around"
                />
            <TextView
                android:id="@+id/txt_around"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_around"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#ff000000"
                android:text="周围的人"/>
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@mipmap/local_hq_line"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            >
            <TextView
                android:id="@+id/txt_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="语音播报"
                android:textSize="20sp"
                android:textColor="#ff000000"
                />
            <com.leaking.slideswitch.SlideSwitch
                android:id="@+id/switch_speak"
                android:layout_width="20dip"
                android:layout_height="40dip"
                slideswitch:isOpen="true"
                slideswitch:shape="circle"
                slideswitch:themeColor="#f200aa96"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp">
            </com.leaking.slideswitch.SlideSwitch>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
